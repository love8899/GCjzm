@using Wfm.Core.Domain.Common
@using Wfm.Core.Infrastructure
@{
    Layout = "~/Views/Shared/Layout/_ColumnsTwo.cshtml";
    ViewBag.PageClass = "html-topic-page";

    var commonSettings = EngineContext.Current.Resolve<CommonSettings>();
    var siteTitle = commonSettings.SiteTitle;
    var shortName = "GC Employment Staffing Agency";
    var pageTitle = "Area Specialties";
    //var description = siteTitle + " offers staffing services to companies large and small in a multitude of industries.";

    ViewBag.Title = pageTitle + " | " + shortName;
    //ViewBag.Description = description;
    ViewBag.Keywords = null;
    ViewBag.PageTitle = ViewBag.Title;
    //ViewBag.PageDescription = ViewBag.Description;
    ViewBag.PageName = shortName + " | " + pageTitle.ToLower();
}

@section left {
    @Html.Partial("Layout/_EmployerSideBar")
}
<div class="page topic-page" id="ph-topic">
    <div class="page-title" id="ph-title">
        <h1>Area Specialties</h1>
    </div>
    <div class="page-body">
        <p>
            @siteTitle offers staffing services to companies large and small in a multitude
            of industries. From management, sales and marketing and financial and accounting
            functions – to production, supply chain, IT and administrative personnel, Great
            Connection's experience in diverse placements is our competitive advantage.
        </p>
        <p>
            When working hand-in-hand with @siteTitle, you will discover the efficiency
            and effectiveness of our placement programs. Your @siteTitle Account Manager
            will work closely with you to provide flexible human resource solutions that are
            specific to your needs. Whether you require a single temporary employee just for
            the day or need to staff an entire department, @siteTitle has you covered.
            To learn more about some of the placements we specialize in, click on one of the
            area specialties below.
        </p>
        <ul>
            <li>Management and Executive</li>
            <li>Sales and Marketing</li>
            <li>Financial and Accounting</li>
            <li>Information Technology</li>
            <li>Life Sciences</li>
            <li>Engineering</li>
            <li>Industrial and Manufacturing</li>
            <li>Call Centre and Customer Service</li>
            <li>Supply Chain, Logistics and Warehousing</li>
            <li>Administrative and Office</li>
            <li>Skilled Trades</li>
            <li>Others</li>
        </ul>
    </div>
</div>
