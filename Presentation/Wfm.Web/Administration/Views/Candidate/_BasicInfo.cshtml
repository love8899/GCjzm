        <td class="adminTitle">
            @Html.LabelFor(model => model.FirstName)
        </td>
        <td class="adminData">
            @Model.FirstName
        </td>
        <td class="adminTitle" rowspan="4"></td>
        <td class="adminData picture-td" rowspan="4">
            <img alt="@Model.Id" src="@Model.PictureThumbnailUrl" />
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.LastName)
        </td>
