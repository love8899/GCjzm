        <td class="adminTitle">
            @Html.LabelFor(model => model.DesiredPay)
        </td>
        <td class="adminData">
            @Model.DesiredPay
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.SalutationId)
        </td>
        <td class="adminData">
            @Model.SalutationModel.SalutationName
        </td>
