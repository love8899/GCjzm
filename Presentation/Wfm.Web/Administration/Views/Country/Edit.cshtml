@model CountryModel

@{
    //page title
    ViewBag.Title = T("Admin.Configuration.Country.EditCountryDetails").Text;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "country-form" }))
{
    <div class="section-header">
        <div class="title">
            @T("Admin.Configuration.Country.EditCountryDetails") @Html.ActionLink("(" + T("Admin.Configuration.Country.BackToList") + ")", "Index")
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="country-delete" class="delete-button k-button" data-url='@Url.Action("Delete", "Country", new {id = Model.Id })'>@T("Common.Delete")</span>
        </div>
    </div>

    @Html.Partial("_CreateOrUpdate", Model)
}

