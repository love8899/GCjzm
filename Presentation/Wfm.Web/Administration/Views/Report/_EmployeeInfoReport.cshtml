@using System.Drawing
@using System.Web.UI.WebControls
@using MvcReportViewer
@{
    var settings = new ControlSettings
    {
        SizeToReportContent = true,
        ShowParameterPrompts = false,
        ShowFindControls = true,
        BackColor = Color.AliceBlue,
        KeepSessionAlive = true,
        //Width = new Unit("100%"),
        //Height = new Unit("800px"),
        AsyncRendering = false
    };
}

@Html.MvcReportViewer(
    "/WFMReports/EmployeeInformationReport",
    new
    {
        from = ViewBag.StartDate,
        to = ViewBag.EndDate,
        companyIds = ViewBag.CompanyIds,
        FranchiseName = ViewBag.FranchiseName,
        FranchiseId = ViewBag.FranchiseId
    },
    new { style = "border: none ; height: 100%; width: 100%;min-height: 600px" }
).ControlSettings(settings)
