@model IList<Wfm.Core.Domain.Announcements.Announcement>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="cardAnnouncement">     
            <h4>@T("Common.Date"):@item.CreatedOnUtc.Value.ToShortDateString()</h4>              
              <div class="options">
             <a class="k-button clsMarkAsRead" announcementguid='@item.AnnouncementGuid'>Don't show again</a>
            </div>
            <div>@Html.Raw(item.AnnouncementText)</div>
        </div>
    }
}
else
{
    <label>There are no announcements for now.</label>
}
