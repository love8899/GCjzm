@model MessageModel

<div class="section-header">
    <div class="title">
        @T("Common.Message")
    </div>
    <div class="options">
        <a id="go2grid" class="k-button" onclick="back2Grid()">Back To List</a>
    </div>
</div>

<table class="adminContent">
    <tr><td width="18%"></td><td width="2%"></td><td width="80%"></td><td></td></tr>
    <tr>
        <td>
            @Html.Partial("_MessageHeader")
        </td>
        <td></td>
        <td id="gird-or-details">
            @Html.Partial("_MessageContent")
        </td>
    </tr>
</table>

<input type="hidden" id="prevMsgId" name="prevMsgId" value="0" />
<input type="hidden" id="currMsgId" name="msgId" value="0" />
<input type="hidden" id="nextMsgId" name="nextMsgId" value="0" />

<script type="text/javascript">
    $(document).ready(function () {
        $('#prevMsgId').val('@(ViewBag.PrevMsgId)');
        $('#currMsgId').val('@(ViewBag.CurrMsgId)');
        $('#nextMsgId').val('@(ViewBag.NextMsgId)');

        var isRead = '@(ViewBag.IsRead)';
        if (isRead == 'false')
            updateUnreadNum(-1);

        $('#go2prev').click(function () { loadMsg($('#prevMsgId').val()); });
        $('#go2next').click(function () { loadMsg($('#nextMsgId').val()); });

        if ($('#prevMsgId').val() == '0')
            $('#go2prev').attr('disabled', 'disabled');

        if ($('#nextMsgId').val() == '0')
            $('#go2next').prop('disabled', true);

    });
</script>