@model BankModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CreatedOnUtc)
@Html.HiddenFor(model => model.UpdatedOnUtc)

<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.BankName)
        </td>
        <td class="adminData required">
            @Html.EditorFor(model => model.BankName)
            @Html.WfmValidationMessageFor(model => model.BankName)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.BankCode)
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.BankCode)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.DisplayOrder)
        </td>
        <td class="adminData">
            @(Html.Kendo().NumericTextBox<int>()
                .Name("DisplayOrder")
                .Format("#")
                .Decimals(0)
                .Step(1)
            )
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.IsActive)
        </td>
        <td class="adminData">
            @Html.CheckBoxFor(model => model.IsActive)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.Note)
        </td>
        @*<td class="adminData">
                @{ Html.Kendo().Editor()
                            .Name("Note")
                            .HtmlAttributes(new { style = "height:200px" })
                            .Encode(false)
                            .Value(@<text></text>)
                            .Render();
                }
            </td>*@
        <td class="adminData">
            @Html.TextAreaFor(model => model.Note, new { style = "height:250px;width:100%;" })
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.CreatedOn)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.CreatedOn)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.UpdatedOn)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.UpdatedOn)
        </td>
    </tr>
</table>
