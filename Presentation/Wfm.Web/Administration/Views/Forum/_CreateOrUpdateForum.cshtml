@model ForumModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CreatedOnUtc)
@Html.HiddenFor(model => model.UpdatedOnUtc)


<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.ForumGroupId):
        </td>
        <td class="adminData required">
            @*@Html.DropDownListFor(model => model.ForumGroupId, new SelectList(Model.ForumGroups, "Id", "Name"))*@
            @(Html.Kendo().DropDownList()
                        .Name("ForumGroupId")
                        .OptionLabel("--Select--")
                        .DataTextField("Text")
                        .DataValueField("Value")
                        .BindTo(new SelectList(Model.ForumGroups, "Id", "Name"))
            )
            @Html.WfmValidationMessageFor(model => model.ForumGroupId)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.Name):
        </td>
        <td class="adminData required">
            @Html.EditorFor(model => model.Name)
            @Html.WfmValidationMessageFor(model => model.Name)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.Description):
        </td>
        <td class="adminData required">
            @Html.EditorFor(x => x.Description, "RichEditor2")
            @Html.WfmValidationMessageFor(model => model.Description)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.DisplayOrder):
        </td>
        <td class="adminData required">
            @Html.EditorFor(model => model.DisplayOrder)
            @Html.WfmValidationMessageFor(model => model.DisplayOrder)
        </td>
    </tr>
</table>
