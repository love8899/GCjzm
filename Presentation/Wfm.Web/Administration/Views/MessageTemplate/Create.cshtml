@model MessageTemplateModel

@{
    //page title
   // ViewBag.Title = T("Admin.Configuration.MessageTemplate.AddNew").Text;
}

@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            @T("Common.MessageTemplate") @Html.ActionLink("(" + T("Admin.Configuration.MessageTemplate.BackToList") + ")", "Index")
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>

    @Html.Partial("_CreateOrUpdate", Model)
}


<script type="text/javascript">
    $('form input[type=submit]').click(function () {
        tinyMCE.triggerSave();
    });
</script>
