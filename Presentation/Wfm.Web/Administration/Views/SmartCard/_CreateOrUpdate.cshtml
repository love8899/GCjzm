@model CandidateSmartCardModel
@Html.HiddenFor(model => model.CandidateSmartCardGuid)
@Html.HiddenFor(model => model.CreatedOnUtc)
@Html.HiddenFor(model => model.UpdatedOnUtc)
@Html.HiddenFor(model => model.CandidateId)
@Html.HiddenFor(model => model.CandidateGuid)
@Html.HiddenFor(model => model.EmployeeId)
@Html.HiddenFor(model => model.CandidateFirstName)
@Html.HiddenFor(model => model.CandidateLastName)
@Html.ValidationSummary(true)
<input type="hidden" value=@(Model.Id) name="Id">
<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.EmployeeId)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.EmployeeId)
            @Html.WfmValidationMessageFor(model => model.EmployeeId)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.CandidateFirstName)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.CandidateFirstName)
            @Html.WfmValidationMessageFor(model => model.CandidateFirstName)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.CandidateLastName)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.CandidateLastName)
            @Html.WfmValidationMessageFor(model => model.CandidateLastName)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.SmartCardUid)
        </td>
        <td class="adminData required">
            @Html.Kendo().MaskedTextBoxFor(model => model.SmartCardUid).Mask("0000000000").ClearPromptChar(true)
            @Html.WfmValidationMessageFor(model => model.SmartCardUid)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.IsActive)
        </td>
        <td class="adminData">
            @Html.CheckBoxFor(model => model.IsActive)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.ActivatedDate)
        </td>
        <td class="adminData">
            @(Html.Kendo().DatePicker().HtmlAttributes(new { type = "text" })
                .Name("ActivatedDate")
                .Format("dddd, MMMM d, yyyy")
            )
            @Html.WfmValidationMessageFor(model => model.ActivatedDate)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.DeactivatedDate)
        </td>
        <td class="adminData">
            @(Html.Kendo().DatePicker().HtmlAttributes(new { type = "text" })
                        .Name("DeactivatedDate")
                .Format("dddd, MMMM d, yyyy")
            )
            @Html.WfmValidationMessageFor(model => model.DeactivatedDate)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.ReasonForDeactivation)
        </td>
        <td class="adminData">
            @{ Html.Kendo().Editor()
                .Name("ReasonForDeactivation")
                .HtmlAttributes(new { style = "height:200px" })
                .Encode(false)
                .Value(@<text></text>)
                .Render();
            }
            @Html.WfmValidationMessageFor(model => model.ReasonForDeactivation)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.Note)
        </td>
        <td class="adminData">
            @Html.TextAreaFor(model => model.Note, new { style = "height:150px;width:100%;" })
        </td>
    </tr>    
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.CreatedOn)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.CreatedOn)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.UpdatedOn)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.UpdatedOn)
        </td>
    </tr>
    <tr>
</table>