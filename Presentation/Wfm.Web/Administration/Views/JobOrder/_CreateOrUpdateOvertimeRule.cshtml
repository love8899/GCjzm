@using Wfm.Services.JobOrders


@model JobOrderOvertimeRuleModel


@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.JobOrderId)
@Html.HiddenFor(model => model.CreatedOnUtc)
@Html.HiddenFor(model => model.UpdatedOnUtc)


<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.JobTitle)
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.JobTitle)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            Type
        </td>
        <td class="adminData">
            @Html.DisplayFor(model => model.OvertimeRuleSettingModel.OvertimeType.Name)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.OvertimeRuleSettingId)
        </td>
        <td class="adminData required">
            @(Html.Kendo().DropDownListFor(model => model.OvertimeRuleSettingId)
                .Name("OvertimeRuleSettingId")
                .OptionLabel("--Select--")
                .BindTo(Model.OvertimeRuleSettings)
                .DataTextField("Text")
                .DataValueField("Value")
                .Enable(true)
            )
            @Html.WfmValidationMessageFor(model => model.OvertimeRuleSettingId)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.IsActive)
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.IsActive)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.LabelFor(model => model.Note)
        </td>
        <td class="adminData">
            @Html.TextAreaFor(model => model.Note, new { style = "height:150px; width:60%;" })
        </td>
    </tr>
</table>
